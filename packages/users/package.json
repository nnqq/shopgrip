{
  "name": "users",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "test": "MONGO_URL=test jest --silent --coverage --forceExit",
    "clearDist": "rm -r dist",
    "buildTs": "../../node_modules/.bin/tsc",
    "incVersion": "semver -i $(cat version.num) > version.num",
    "buildContainer": "/usr/local/bin/docker build -t dokku/shopgrip-users:$(cat version.num) .",
    "deployContainer": "/usr/local/bin/docker save dokku/shopgrip-users:$(cat version.num) | ssh root@shopgrip.ru \"docker load | dokku tags:create shopgrip-users previous; dokku tags:deploy shopgrip-users $(cat version.num)\"",
    "deployUsers": "npm ci && npm run clearDist && npm run buildTs && npm run incVersion && npm run buildContainer && npm run deployContainer"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "moleculer": "^0.13.11",
    "mongoose": "^5.7.3",
    "nats": "^1.3.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.5.19",
    "@types/uuid": "^3.4.5",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "semver": "^6.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist"
    ]
  }
}
